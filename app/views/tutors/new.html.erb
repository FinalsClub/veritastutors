<h1>New tutor</h1>

<%= error_messages_for :user %>
<%= error_messages_for :tutor %>

<% form_for :tutor, :url => {:action => :create} do |f| %>

  <% fields_for :user do |user_fields| %>

  <p>
    <%= label_tag 'login' %><br/>
    <%= user_fields.text_field :login %>
  </p>

  <p>
    <%= label_tag 'email' %><br/>
    <%= user_fields.text_field :email %>
  </p>

  <p>
    <%= label_tag 'password' %><br/>
    <%= user_fields.password_field :password %>
  </p>

  <p>
    <%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
    <%= user_fields.password_field :password_confirmation %>
  </p>

  <% end %>


  <p><%= submit_tag 'Create tutor' %></p>
<% end %>

<%= link_to 'Back', tutors_path %>
